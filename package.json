{
  "name": "motiontext-renderer",
  "version": "1.1.0",
  "description": "Web-based animated caption/subtitle renderer with plugin system",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite --mode development",
    "plugin:server": "node demo/plugin-server/server.js",
    "proxy:server": "node demo/proxy-server.js",
    "dev:build": "vite build --watch",
    "preview": "vite preview --mode development",
    "build": "tsc && vite build",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prebuild": "pnpm clean",
    "test": "vitest",
    "test:run": "vitest run --pool=threads",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "verify": "pnpm lint && pnpm format:check && pnpm typecheck && pnpm test:run",
    "release:all": "pnpm verify && pnpm build && changeset publish",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "prepare": "husky"
  },
  "keywords": [
    "video",
    "subtitle",
    "caption",
    "animation",
    "renderer",
    "plugin",
    "typescript",
    "web"
  ],
  "author": "Team Kimtaerin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/teamKimtaerin/motiontext-renderer.git"
  },
  "bugs": {
    "url": "https://github.com/teamKimtaerin/motiontext-renderer/issues"
  },
  "homepage": "https://github.com/teamKimtaerin/motiontext-renderer#readme",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "gsap": "^3.12.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "terser": "^5.44.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-dts": "^3.6.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "react-icons": "^5.5.0"
  },
  "peerDependencies": {
    "gsap": "^3.12.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
