{
  "name": "slideup",
  "version": "1.0.0",
  "pluginApi": "2.1",
  "minRenderer": "1.3.0",
  "entry": "index.mjs",
  "targets": ["text"],
  "capabilities": ["style-vars"],
  "peer": { "gsap": "^3.12.0" },
  "preload": [],
  "schema": {
    "slideDistance": {
      "type": "number",
      "label": "슬라이드 거리",
      "description": "텍스트가 아래에서 올라오는 거리 (px)",
      "default": 30,
      "min": 10,
      "max": 100,
      "step": 5
    },
    "animationDuration": {
      "type": "number",
      "label": "애니메이션 속도",
      "description": "전체 애니메이션의 지속 시간 (초)",
      "default": 1,
      "min": 0.3,
      "max": 2,
      "step": 0.1
    },
    "staggerDelay": {
      "type": "number",
      "label": "단어 간격",
      "description": "각 단어 사이의 시작 간격 (초)",
      "default": 0.12,
      "min": 0,
      "max": 0.5,
      "step": 0.02
    },
    "easeType": {
      "type": "select",
      "label": "이징 타입",
      "description": "애니메이션의 가속도 곡선을 선택합니다",
      "default": "power2.out",
      "enum": ["power2.out", "back.out", "elastic.out", "bounce.out"]
    },
    "blurEffect": {
      "type": "boolean",
      "label": "블러 효과",
      "description": "슬라이드 시 블러 효과를 추가합니다",
      "default": true
    }
  }
}
