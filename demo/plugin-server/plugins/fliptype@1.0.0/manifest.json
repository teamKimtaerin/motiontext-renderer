{
  "name": "fliptype@1.0.0",
  "version": "1.0.0",
  "pluginApi": "v3.0",
  "type": "hybrid",
  "targets": ["text"],
  "capabilities": ["dom", "channel"],
  "schema": {
    "typingSpeed": {
      "type": "number",
      "label": "Typing Speed",
      "description": "Speed of typing animation (characters per second)",
      "default": 15,
      "min": 1,
      "max": 50,
      "step": 1
    },
    "flipDuration": {
      "type": "number",
      "label": "Flip Duration",
      "description": "Duration of the flip animation relative to total time",
      "default": 0.6,
      "min": 0.1,
      "max": 1.0,
      "step": 0.1
    },
    "flipAngle": {
      "type": "number",
      "label": "Flip Angle",
      "description": "Maximum rotation angle in degrees",
      "default": 180,
      "min": 90,
      "max": 360,
      "step": 10
    },
    "flipDirection": {
      "type": "select",
      "label": "Flip Direction",
      "description": "Direction of the card flip",
      "default": "horizontal",
      "enum": ["horizontal", "vertical"]
    },
    "typingDelay": {
      "type": "number",
      "label": "Typing Start Delay",
      "description": "Delay before typing starts (0-1, relative to flip progress)",
      "default": 0.3,
      "min": 0,
      "max": 1,
      "step": 0.1
    }
  }
}