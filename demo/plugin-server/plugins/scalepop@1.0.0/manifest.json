{
  "name": "scalepop",
  "version": "1.0.0",
  "pluginApi": "3.0",
  "minRenderer": "2.0.0",
  "entry": "index.mjs",
  "targets": ["text"],
  "capabilities": ["style-vars", "dom-manipulation"],
  "peer": { "gsap": "^3.12.0" },
  "preload": [],
  "schema": {
    "popScale": {
      "type": "number",
      "label": "팝 크기",
      "description": "텍스트가 커지는 최대 비율",
      "default": 1.5,
      "min": 1.1,
      "max": 3,
      "step": 0.1
    },
    "animationDuration": {
      "type": "number",
      "label": "애니메이션 속도",
      "description": "전체 애니메이션의 지속 시간 (초)",
      "default": 1.2,
      "min": 0.5,
      "max": 2.5,
      "step": 0.1
    },
    "staggerDelay": {
      "type": "number",
      "label": "글자 간격",
      "description": "각 글자 사이의 시작 간격 (초)",
      "default": 0.08,
      "min": 0,
      "max": 0.3,
      "step": 0.02
    },
    "bounceStrength": {
      "type": "number",
      "label": "바운스 강도",
      "description": "커진 후 축소할 때의 탄성 정도",
      "default": 0.6,
      "min": 0.1,
      "max": 2,
      "step": 0.1
    },
    "colorPop": {
      "type": "boolean",
      "label": "색상 팝 효과",
      "description": "커질 때 색상이 밝아지는 효과를 추가합니다",
      "default": true
    }
  }
}
