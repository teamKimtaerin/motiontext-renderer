{
  "name": "cwi-loud",
  "version": "1.0.0",
  "pluginApi": "2.1",
  "minRenderer": "1.3.0",
  "entry": "index.mjs",
  "targets": ["text"],
  "capabilities": ["style-vars"],
  "preload": [],
  "schema": {
    "speaker": {
      "type": "string",
      "label": "화자 ID",
      "description": "화자별 색상을 적용할 때 사용되는 화자 식별자"
    },
    "palette": {
      "type": "object",
      "label": "색상 팔레트",
      "description": "화자별 색상 매핑 객체"
    },
    "color": {
      "type": "string",
      "label": "고정 색상",
      "description": "특정 색상을 직접 지정 (팔레트보다 우선순위 높음)"
    },
    "tremble": {
      "type": "object",
      "label": "떨림 효과",
      "description": "진동 효과의 세부 설정",
      "default": { "ampPx": 1.5, "freq": 12 },
      "properties": {
        "ampPx": {
          "type": "number",
          "label": "진동 강도",
          "description": "진동의 픽셀 단위 진폭",
          "default": 1.5,
          "min": 0,
          "max": 10,
          "step": 0.1
        },
        "freq": {
          "type": "number",
          "label": "진동 주파수",
          "description": "초당 진동 횟수",
          "default": 12,
          "min": 1,
          "max": 30,
          "step": 1
        }
      }
    },
    "t0": {
      "type": "number",
      "label": "시작 시간",
      "description": "큰 소리 효과가 시작되는 상대 시간 (초)",
      "default": 0,
      "min": 0,
      "step": 0.1
    },
    "t1": {
      "type": "number",
      "label": "종료 시간",
      "description": "큰 소리 효과가 종료되는 상대 시간 (초)",
      "default": 0,
      "min": 0,
      "step": 0.1
    }
  }
}