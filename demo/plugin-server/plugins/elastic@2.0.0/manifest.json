{
  "name": "elastic",
  "version": "2.0.0",
  "type": "dom",
  "pluginApi": "3.0",
  "minRenderer": "2.0.0",
  "entry": "index.mjs",
  "targets": ["text"],
  "capabilities": ["style-vars", "dom-manipulation"],
  "peer": { "gsap": "^3.12.0" },
  "preload": [],
  "timeOffset": [-0.3, 0.3],
  "schema": {
    "bounceStrength": {
      "type": "number",
      "default": 0.7,
      "min": 0.1,
      "max": 2,
      "step": 0.1,
      "ui": {
        "control": "slider",
        "allowDefine": true
      },
      "i18n": {
        "label": {
          "ko": "바운스 강도",
          "en": "Bounce Strength"
        },
        "description": {
          "ko": "탄성 효과의 강도를 조절합니다",
          "en": "Controls the intensity of the elastic effect"
        }
      }
    },
    "animationDuration": {
      "type": "number",
      "default": 1.5,
      "min": 0.5,
      "max": 4,
      "step": 0.1,
      "ui": {
        "control": "slider",
        "unit": "s",
        "allowDefine": true
      },
      "i18n": {
        "label": {
          "ko": "애니메이션 속도",
          "en": "Animation Duration"
        },
        "description": {
          "ko": "전체 애니메이션 지속 시간 (초)",
          "en": "Total animation duration in seconds"
        }
      }
    },
    "staggerDelay": {
      "type": "number",
      "default": 0.1,
      "min": 0,
      "max": 0.5,
      "step": 0.05,
      "ui": {
        "control": "slider",
        "unit": "s",
        "allowDefine": true
      },
      "i18n": {
        "label": {
          "ko": "단어 간격",
          "en": "Stagger Delay"
        },
        "description": {
          "ko": "각 단어 사이의 시작 간격 (초)",
          "en": "Start delay between each word in seconds"
        }
      }
    },
    "startScale": {
      "type": "number",
      "default": 0,
      "min": 0,
      "max": 1,
      "step": 0.1,
      "ui": {
        "control": "slider",
        "allowDefine": true
      },
      "i18n": {
        "label": {
          "ko": "시작 크기",
          "en": "Start Scale"
        },
        "description": {
          "ko": "애니메이션 시작 시 텍스트 크기 비율",
          "en": "Text scale ratio at animation start"
        }
      }
    },
    "overshoot": {
      "type": "number",
      "default": 1.3,
      "min": 1,
      "max": 2,
      "step": 0.1,
      "ui": {
        "control": "slider",
        "allowDefine": true
      },
      "i18n": {
        "label": {
          "ko": "오버슈트 크기",
          "en": "Overshoot Scale"
        },
        "description": {
          "ko": "바운스 시 최대 크기 배율",
          "en": "Maximum scale factor during bounce"
        }
      }
    }
  }
}
