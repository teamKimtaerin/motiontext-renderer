{
  "name": "typewriter",
  "version": "1.0.0",
  "type": "dom",
  "pluginApi": "3.0",
  "minRenderer": "2.0.0",
  "entry": "index.mjs",
  "targets": ["text"],
  "capabilities": ["style-vars", "dom-manipulation"],
  "peer": { "gsap": "^3.12.0" },
  "preload": [],
  "schema": {
    "typingSpeed": {
      "type": "number",
      "label": "타이핑 속도",
      "description": "각 글자가 나타나는 간격 (초)",
      "default": 0.05,
      "min": 0.02,
      "max": 0.2,
      "step": 0.01
    },
    "cursorBlink": {
      "type": "boolean",
      "label": "커서 깜빡임",
      "description": "타이핑 커서의 깜빡임 효과를 적용합니다",
      "default": true
    },
    "cursorChar": {
      "type": "string",
      "label": "커서 문자",
      "description": "타이핑 커서로 사용할 문자",
      "default": "|"
    },
    "showCursor": {
      "type": "boolean",
      "label": "커서 표시",
      "description": "타이핑 커서를 표시합니다",
      "default": true
    },
    "soundEffect": {
      "type": "boolean",
      "label": "타이핑 사운드",
      "description": "타이핑 사운드 효과를 추가합니다 (예정)",
      "default": false
    }
  }
}
