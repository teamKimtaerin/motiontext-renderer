{
  "name": "spin",
  "version": "2.0.0",
  "type": "channel",
  "pluginApi": "3.0",
  "minRenderer": "2.0.0",
  "entry": "index.mjs",
  "targets": ["text"],
  "capabilities": ["style-vars", "dom-manipulation"],
  "peer": { "gsap": "^3.12.0" },
  "preload": [],
  "timeOffset": [0, 0],
  "schema": {
    "fullTurns": {
      "type": "number",
      "default": 1,
      "min": 0,
      "max": 10,
      "step": 0.5,
      "ui": {
        "control": "slider",
        "allowDefine": true
      },
      "i18n": {
        "label": {
          "ko": "회전 횟수",
          "en": "Full Turns"
        },
        "description": {
          "ko": "텍스트가 완전히 회전하는 횟수 (360도 기준)",
          "en": "Number of complete text rotations (360 degree basis)"
        }
      }
    }
  }
}
