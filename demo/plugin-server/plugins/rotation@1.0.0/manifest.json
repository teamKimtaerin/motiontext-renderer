{
  "name": "rotation",
  "version": "1.0.0",
  "pluginApi": "2.1",
  "minRenderer": "1.3.0",
  "entry": "index.mjs",
  "targets": ["text"],
  "capabilities": ["style-vars"],
  "peer": { "gsap": "^3.12.0" },
  "preload": [],
  "schema": {
    "rotationDegrees": {
      "type": "number",
      "label": "회전 각도",
      "description": "텍스트가 회전하는 최대 각도",
      "default": 360,
      "min": 90,
      "max": 720,
      "step": 90
    },
    "animationDuration": {
      "type": "number",
      "label": "애니메이션 속도",
      "description": "회전 애니메이션의 지속 시간 (초)",
      "default": 1.5,
      "min": 0.5,
      "max": 3,
      "step": 0.1
    },
    "staggerDelay": {
      "type": "number",
      "label": "글자 간격",
      "description": "각 글자 사이의 시작 간격 (초)",
      "default": 0.1,
      "min": 0,
      "max": 0.3,
      "step": 0.05
    },
    "perspective": {
      "type": "number",
      "label": "3D 시점",
      "description": "3D 회전 효과의 시점 거리",
      "default": 800,
      "min": 200,
      "max": 1500,
      "step": 100
    },
    "axisX": {
      "type": "boolean",
      "label": "X축 회전",
      "description": "X축을 중심으로 회전합니다",
      "default": false
    },
    "axisY": {
      "type": "boolean",
      "label": "Y축 회전",
      "description": "Y축을 중심으로 회전합니다",
      "default": true
    },
    "axisZ": {
      "type": "boolean",
      "label": "Z축 회전",
      "description": "Z축을 중심으로 회전합니다",
      "default": false
    }
  }
}
