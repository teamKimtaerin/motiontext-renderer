{
  "name": "slideup",
  "version": "2.0.0",
  "type": "dom",
  "pluginApi": "3.0",
  "minRenderer": "2.0.0",
  "entry": "index.mjs",
  "targets": ["text"],
  "capabilities": ["style-vars", "dom-manipulation"],
  "peer": { "gsap": "^3.12.0" },
  "preload": [],
  "timeOffset": [-0.3, 0.3],
  "schema": {
    "slideDistance": {
      "type": "number",
      "default": 30,
      "min": 10,
      "max": 100,
      "step": 5,
      "ui": {
        "control": "slider",
        "unit": "px",
        "allowDefine": true
      },
      "i18n": {
        "label": {
          "ko": "슬라이드 거리",
          "en": "Slide Distance"
        },
        "description": {
          "ko": "텍스트가 아래에서 올라오는 거리 (px)",
          "en": "Distance text slides up from below (pixels)"
        }
      }
    },
    "animationDuration": {
      "type": "number",
      "default": 1,
      "min": 0.3,
      "max": 2,
      "step": 0.1,
      "ui": {
        "control": "slider",
        "unit": "s",
        "allowDefine": true
      },
      "i18n": {
        "label": {
          "ko": "애니메이션 속도",
          "en": "Animation Duration"
        },
        "description": {
          "ko": "전체 애니메이션의 지속 시간 (초)",
          "en": "Total animation duration (seconds)"
        }
      }
    },
    "staggerDelay": {
      "type": "number",
      "default": 0.12,
      "min": 0,
      "max": 0.5,
      "step": 0.02,
      "ui": {
        "control": "slider",
        "unit": "s",
        "allowDefine": true
      },
      "i18n": {
        "label": {
          "ko": "단어 간격",
          "en": "Word Delay"
        },
        "description": {
          "ko": "각 단어 사이의 시작 간격 (초)",
          "en": "Start delay between each word (seconds)"
        }
      }
    },
    "easeType": {
      "type": "string",
      "default": "power2.out",
      "enum": ["power2.out", "back.out", "elastic.out", "bounce.out"],
      "ui": {
        "control": "select",
        "allowDefine": true
      },
      "i18n": {
        "label": {
          "ko": "이징 타입",
          "en": "Easing Type"
        },
        "description": {
          "ko": "애니메이션의 가속도 곡선을 선택합니다",
          "en": "Selects the acceleration curve of the animation"
        }
      }
    },
    "blurEffect": {
      "type": "boolean",
      "default": true,
      "ui": {
        "control": "checkbox",
        "allowDefine": true
      },
      "i18n": {
        "label": {
          "ko": "블러 효과",
          "en": "Blur Effect"
        },
        "description": {
          "ko": "슬라이드 시 블러 효과를 추가합니다",
          "en": "Adds blur effect during slide animation"
        }
      }
    }
  }
}
