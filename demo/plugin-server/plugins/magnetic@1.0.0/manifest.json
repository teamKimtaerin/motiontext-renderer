{
  "name": "magnetic",
  "version": "1.0.0",
  "pluginApi": "2.1",
  "minRenderer": "1.3.0",
  "entry": "index.mjs",
  "targets": ["text"],
  "capabilities": ["style-vars"],
  "peer": { "gsap": "^3.12.0" },
  "preload": [],
  "schema": {
    "magnetStrength": {
      "type": "number",
      "label": "자기장 강도",
      "description": "텍스트가 끌리는 힘의 강도를 조절합니다",
      "default": 15,
      "min": 5,
      "max": 50,
      "step": 5
    },
    "animationDuration": {
      "type": "number",
      "label": "애니메이션 속도",
      "description": "자기장 효과의 지속 시간 (초)",
      "default": 1.2,
      "min": 0.5,
      "max": 3,
      "step": 0.1
    },
    "attractionDelay": {
      "type": "number",
      "label": "끌림 딜레이",
      "description": "각 글자가 끌리기 시작하는 간격 (초)",
      "default": 0.1,
      "min": 0,
      "max": 0.5,
      "step": 0.05
    },
    "elasticity": {
      "type": "number",
      "label": "탄성력",
      "description": "원위치로 돌아가는 탄성의 강도",
      "default": 0.8,
      "min": 0.1,
      "max": 2,
      "step": 0.1
    }
  }
}
