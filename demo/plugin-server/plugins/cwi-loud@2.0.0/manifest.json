{
  "name": "cwi-loud",
  "version": "2.0.0",
  "type": "dom",
  "pluginApi": "3.0",
  "minRenderer": "2.0.0",
  "entry": "index.mjs",
  "targets": ["text"],
  "capabilities": ["style-vars", "dom-manipulation"],
  "preload": [],
  "schema": {
    "speaker": {
      "type": "string",
      "default": "",
      "ui": { "control": "text", "allowDefine": true },
      "i18n": {
        "label": { "ko": "화자 ID", "en": "Speaker ID" },
        "description": { "ko": "화자별 색상을 적용할 때 사용되는 화자 식별자", "en": "Speaker identifier for color mapping" }
      }
    },
    "palette": {
      "type": "object",
      "default": {},
      "ui": { "control": "object", "allowDefine": true },
      "i18n": {
        "label": { "ko": "색상 팔레트", "en": "Color Palette" },
        "description": { "ko": "화자별 색상 매핑 객체", "en": "Speaker-to-color mapping object" }
      }
    },
    "color": {
      "type": "string",
      "default": "",
      "pattern": "^#[0-9a-fA-F]{6}$",
      "ui": { "control": "color", "allowDefine": true },
      "i18n": {
        "label": { "ko": "고정 색상", "en": "Fixed Color" },
        "description": { "ko": "특정 색상을 직접 지정 (팔레트보다 우선순위 높음)", "en": "Direct color specification (overrides palette)" }
      }
    },
    "tremble": {
      "type": "object",
      "default": { "ampPx": 1.5, "freq": 12 },
      "ui": { "control": "object", "allowDefine": true },
      "i18n": {
        "label": { "ko": "떨림 효과", "en": "Tremble Effect" },
        "description": { "ko": "진동 효과의 세부 설정", "en": "Detailed trembling effect settings" }
      },
      "properties": {
        "ampPx": {
          "type": "number",
          "default": 1.5,
          "min": 0,
          "max": 10,
          "step": 0.1,
          "ui": { "control": "slider", "unit": "px", "allowDefine": true },
          "i18n": {
            "label": { "ko": "진동 강도", "en": "Tremble Intensity" },
            "description": { "ko": "진동의 픽셀 단위 진폭", "en": "Trembling amplitude in pixels" }
          }
        },
        "freq": {
          "type": "number",
          "default": 12,
          "min": 1,
          "max": 30,
          "step": 1,
          "ui": { "control": "slider", "unit": "Hz", "allowDefine": true },
          "i18n": {
            "label": { "ko": "진동 주파수", "en": "Tremble Frequency" },
            "description": { "ko": "초당 진동 횟수", "en": "Vibrations per second" }
          }
        }
      }
    }
  }
}