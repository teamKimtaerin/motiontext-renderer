{
  "name": "glitch",
  "version": "1.0.0",
  "pluginApi": "2.1",
  "minRenderer": "1.3.0",
  "entry": "index.mjs",
  "targets": ["text"],
  "capabilities": ["style-vars"],
  "peer": { "gsap": "^3.12.0" },
  "preload": [],
  "schema": {
    "glitchIntensity": {
      "type": "number",
      "label": "글리치 강도",
      "description": "텍스트가 흔들리는 정도를 조절합니다",
      "default": 5,
      "min": 1,
      "max": 20,
      "step": 1
    },
    "animationDuration": {
      "type": "number",
      "label": "애니메이션 주기",
      "description": "글리치 패턴이 반복되는 주기 (초)",
      "default": 2,
      "min": 0.5,
      "max": 5,
      "step": 0.1
    },
    "glitchFrequency": {
      "type": "number",
      "label": "글리치 빈도",
      "description": "글리치 효과가 발생하는 간격 (초)",
      "default": 0.3,
      "min": 0.1,
      "max": 1,
      "step": 0.1
    },
    "colorSeparation": {
      "type": "boolean",
      "label": "색상 분리 효과",
      "description": "빨강/시안 색상 분리 효과를 적용합니다",
      "default": true
    },
    "noiseEffect": {
      "type": "boolean",
      "label": "노이즈 효과",
      "description": "디지털 노이즈 레이어를 추가합니다",
      "default": true
    }
  }
}
