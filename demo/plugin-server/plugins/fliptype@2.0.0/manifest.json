{
  "name": "fliptype",
  "version": "2.0.0",
  "type": "hybrid",
  "pluginApi": "3.0",
  "minRenderer": "2.0.0",
  "entry": "index.mjs",
  "targets": ["text"],
  "capabilities": ["style-vars", "dom-manipulation"],
  "peer": { "gsap": "^3.12.0" },
  "preload": [],
  "timeOffset": [-0.3, 0.3],
  "schema": {
    "typingSpeed": {
      "type": "number",
      "default": 15,
      "min": 1,
      "max": 50,
      "step": 1,
      "ui": {
        "control": "slider",
        "unit": "cps",
        "allowDefine": true
      },
      "i18n": {
        "label": {
          "ko": "타이핑 속도",
          "en": "Typing Speed"
        },
        "description": {
          "ko": "타이핑 애니메이션 속도 (초당 글자 수)",
          "en": "Speed of typing animation (characters per second)"
        }
      }
    },
    "flipDuration": {
      "type": "number",
      "default": 0.6,
      "min": 0.1,
      "max": 1.0,
      "step": 0.1,
      "ui": {
        "control": "slider",
        "allowDefine": true
      },
      "i18n": {
        "label": {
          "ko": "플립 지속시간",
          "en": "Flip Duration"
        },
        "description": {
          "ko": "전체 시간 대비 플립 애니메이션의 비율",
          "en": "Duration of the flip animation relative to total time"
        }
      }
    },
    "flipAngle": {
      "type": "number",
      "default": 180,
      "min": 90,
      "max": 360,
      "step": 10,
      "ui": {
        "control": "slider",
        "unit": "°",
        "allowDefine": true
      },
      "i18n": {
        "label": {
          "ko": "플립 각도",
          "en": "Flip Angle"
        },
        "description": {
          "ko": "최대 회전 각도 (도)",
          "en": "Maximum rotation angle in degrees"
        }
      }
    },
    "flipDirection": {
      "type": "string",
      "default": "horizontal",
      "enum": ["horizontal", "vertical"],
      "ui": {
        "control": "select",
        "allowDefine": true
      },
      "i18n": {
        "label": {
          "ko": "플립 방향",
          "en": "Flip Direction"
        },
        "description": {
          "ko": "카드 플립의 방향",
          "en": "Direction of the card flip"
        }
      }
    },
    "typingDelay": {
      "type": "number",
      "default": 0.3,
      "min": 0,
      "max": 1,
      "step": 0.1,
      "ui": {
        "control": "slider",
        "allowDefine": true
      },
      "i18n": {
        "label": {
          "ko": "타이핑 시작 딜레이",
          "en": "Typing Start Delay"
        },
        "description": {
          "ko": "플립 진행도 대비 타이핑 시작 딜레이 (0-1)",
          "en": "Delay before typing starts (0-1, relative to flip progress)"
        }
      }
    }
  }
}