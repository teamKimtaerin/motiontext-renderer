{
  "name": "flames",
  "version": "1.0.0",
  "pluginApi": "3.0",
  "minRenderer": "2.0.0",
  "entry": "index.mjs",
  "targets": ["text"],
  "capabilities": ["portal-breakout"],
  "preload": ["assets/flame.gif"],
  "peer": { "gsap": "^3.12.0" },
  "schema": {
    "baseOpacity": { "type": "number", "default": 0.8, "min": 0, "max": 1, "ui": { "control": "slider", "step": 0.05 } },
    "flicker": { "type": "number", "default": 0.3, "min": 0, "max": 1, "ui": { "control": "slider", "step": 0.05 } },
    "cycles": { "type": "number", "default": 12, "min": 1, "max": 120, "ui": { "control": "slider", "step": 1 } }
  }
}
